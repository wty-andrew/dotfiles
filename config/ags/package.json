{
  "name": "ags-config",
  "version": "1.0.0",
  "description": "AGS starter configuration",
  "main": "config.js",
  "author": "Aylur",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Aylur/ags.git"
  },
  "scripts": {
    "dev": "pnpm build --watch & NODE_ENV=development nodemon -w dist --ext js --exec 'ags -q; ags'",
    "build": "bun build ./src/main.ts --outdir ./dist --external resource://* --external gi://*",
    "format": "prettier dist --write"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.4",
    "@babel/core": "^7.23.7",
    "@babel/plugin-syntax-jsx": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@girs/dbusmenugtk3-0.4": "^0.4.0-3.2.6",
    "@girs/gobject-2.0": "^2.78.0-3.2.6",
    "@girs/gtk-3.0": "^3.24.38-3.2.6",
    "@girs/gvc-1.0": "^1.0.0-3.2.6",
    "@girs/nm-1.0": "^1.45.1-3.2.6",
    "@types/babel__core": "^7.20.5",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser"
  },
  "eslintIgnore": [
    "types"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
